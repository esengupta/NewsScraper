<!DOCTYPE html>
<html>

<html lang="en">
<head>
<meta charset="UTF-8">
<link rel="stylesheet" type="text/css" media="screen" href="style.css" />
<meta name="viewport" content="width=device-width, initial-scale=1">
<link href="https://fonts.googleapis.com/css?family=New+Rocker|Roboto" rel="stylesheet">
{{!-- <script src="https://code.jquery.com/jquery.js"></script>
<script src="/app.js"></script> --}}
<title>National Public Radio - News Scraper</title>
</head>

<div id="header">
  <h1>Saved Articles</h1>
  <button><a href="/" id="scrape">Home</a></button>
  <button><a href="/notes" id="allNotes">Your Notes</a></button>
</div>
<!-- Pass in data from server.js -->
<div class="text_middle" id="savedArticlesHTML">
  {{#each savedArticles}}
    <div class="individualSavedHTML">
      <ul>
    <li>
    <p><span class="label">Title:</span> {{this.title}}</p>
    <p><span class="label">Summary:</span> {{this.body}}</p>
    <p><a href="{{this.link}}" target="_blank">Read Full Article</a></p>
    {{!-- <button class='makeNoteHTML' data-id='{{this._id}}'>Make a Note</button> --}}
  <button id='deleteSavedHTML' data-id='{{this._id}}' data-title='{{this.title}}' data-summary='{{this.body}}'
  data-link='{{this.link}}'>Delete from Saved</button>
        </li>
      </ul>
    </div>
  {{/each}}
  <div id="notes"></div>
</div>
